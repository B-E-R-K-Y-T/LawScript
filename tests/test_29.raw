ВКЛЮЧИТЬ стандартная_библиотека.*


ОПРЕДЕЛИТЬ СУБЪЕКТ название_субъекта (
    ИМЯ Добрый Добряк Добрякович,
)

ОПРЕДЕЛИТЬ ОБЪЕКТ название_объекта (
    ИМЯ Загрязнённый водоём,
)

СОЗДАТЬ ФАКТИЧЕСКУЮ СИТУАЦИЮ Превышение_ПДК_в_Воде (
    ОБЪЕКТ название_объекта,
    СУБЪЕКТ название_субъекта,

    ДАННЫЕ (
        КОНЦЕНТРАЦИЯ_ВЕЩЕСТВА_X 0.01, ! мг/л
    )
)

ОПРЕДЕЛИТЬ КЛАСС ОшибкаВещества НАСЛЕДОВАТЬ ОТ БазоваяОшибка (
    ОПРЕДЕЛИТЬ КОНСТРУКТОР (ссылка) (информация) (
        ссылка:информация = информация;
    )
)

ОПРЕДЕЛИТЬ ПРОЦЕДУРУ главная() (
    ЗАДАТЬ критерии = Превышение_ПДК_в_Воде:__данные__;
    ЗАДАТЬ критерий = "КОНЦЕНТРАЦИЯ_ВЕЩЕСТВА_X";
    ЗАДАТЬ фактическая_концентрация = извлечь_из_таблицы(критерии, критерий);
    ЗАДАТЬ максимальная_концентрация = 0.1;

    ЕСЛИ фактическая_концентрация БОЛЬШЕ максимальная_концентрация ТО (
        ОШИБКА ОшибкаВещества(форматировать_строку("Критерий {} превышен. Он должен быть равен {}", фактическая_концентрация, максимальная_концентрация));
    )
    ИНАЧЕ (
        НАПЕЧАТАТЬ "Проверка по критерию " + критерий +  " для субъекта: " + название_субъекта:__имя_субъекта__ + " пройдена успешно!";
    )

    ЗАДАТЬ с = Список(массив(23, -98, 63));

    НАПЕЧАТАТЬ с:сортировать();
)

ВЫПОЛНИТЬ (
    главная();
)

    ОПРЕДЕЛИТЬ ПРОЦЕДУРУ сортировка_массива(массив_чисел) (
        ЗАДАТЬ длина = длина_массива(массив_чисел);
        ЗАДАТЬ минимальный_индекс = 0;

        ЦИКЛ индекс ОТ 0 ДО длина-1 (
            ! Находим минимальный элемент в оставшейся части массива
            минимальный_индекс = индекс;

            ЦИКЛ внутренний_индекс ОТ индекс+1 ДО длина-1 (
                ЕСЛИ достать_из_массива(массив_чисел, внутренний_индекс) МЕНЬШЕ достать_из_массива(массив_чисел, минимальный_индекс) ТО (
                    минимальный_индекс = внутренний_индекс;
                )
            )

            ! Меняем местами найденный минимальный элемент с текущим
            ЕСЛИ минимальный_индекс НЕРАВНО индекс ТО (
                ЗАДАТЬ временная_переменная = достать_из_массива(массив_чисел, индекс);
                изменить_в_массиве(массив_чисел, индекс, достать_из_массива(массив_чисел, минимальный_индекс));
                изменить_в_массиве(массив_чисел, минимальный_индекс, временная_переменная);
            )
        )

    )
