ВКЛЮЧИТЬ стандартная_библиотека.*


ОПРЕДЕЛИТЬ ПРОЦЕДУРУ главная() (
    ЗАДАТЬ счет = 0;
    ЗАДАТЬ текст;
    ЗАДАТЬ ответ;
    ЗАДАТЬ массив_тестовых_данных = массив("прив", "иное", "прив", "-1");

    ПОКА текст НЕРАВНО "-1" (
        текст = достать_из_массива(массив_тестовых_данных, счет);
        !текст = ввод(">>>");

        ЕСЛИ текст РАВНО"прив"ТО(
            ответ = "И тебе привет!";
        )
        ИНАЧЕ (
            ответ = форматировать_строку("Эхо: {}", текст);
        )

        НАПЕЧАТАТЬ ответ;
        счет = счет + 1;
    )
)

ВЫПОЛНИТЬ (
    главная();
)
