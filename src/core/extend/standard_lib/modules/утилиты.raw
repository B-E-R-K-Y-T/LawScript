ОПРЕДЕЛИТЬ ПРОЦЕДУРУ отобразить_на_массив(отображаемая_процедура, коллекция)(
    ДОКУМЕНТАЦИЯ (
        Вызывает процедуру "отображаемая_процедура", на каждый элемент коллекции.
    )

    ВЕРНУТЬ _отобразить(отображаемая_процедура, коллекция, длина_массива(коллекция), достать_из_массива, массив);
)

ОПРЕДЕЛИТЬ ПРОЦЕДУРУ _отобразить(отображаемая_функция, коллекция, длина, достать, фабрика_коллекции)(
    ЗАДАТЬ новая_коллекция = фабрика_коллекции();

    БЛОКИРОВАТЬ (
        ЦИКЛ счет ОТ 0 ДО длина - 1 (
            добавить_в_массив(новая_коллекция, отображаемая_функция(достать(коллекция, счет)));
        )
    )

    ВЕРНУТЬ новая_коллекция;
)
